<Window x:Class="MessengerAdminPanel.Windows.PromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessengerAdminPanel.Windows"
        mc:Ignorable="d"
        Title="Window" Height="130.16" Width="422.667"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel FocusManager.FocusedElement="{Binding ElementName=textBoxResponse}">
        <TextBlock x:Name="textBlockTitle" 
                   Text="Title" 
                   Margin="5,5,5,0" 
                   FontSize="16" />
        <TextBox x:Name="textBoxResponse" 
                 Margin="5" 
                 FontSize="16" />
        <Button x:Name="btnOK" 
                Content="OK"
                IsDefault="True"
                Click="OKButton_Click" 
                Margin="5,0,5,5" 
                FontSize="16" />
    </StackPanel>
</Window>
