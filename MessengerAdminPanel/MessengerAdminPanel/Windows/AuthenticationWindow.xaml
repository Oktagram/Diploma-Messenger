<Window x:Class="MessengerAdminPanel.Windows.AuthenticationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessengerAdminPanel.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="AuthorizingWindow" Height="223.167" Width="300" ResizeMode="CanMinimize">
    <Grid x:Name="LayoutRoot" Background="White" FocusManager.FocusedElement="{Binding ElementName=textBoxUsername}">
        <StackPanel Grid.Row="0" Margin="15,5,15,0">
            <TextBlock Text="Username" Foreground="Black" FontSize="16" Margin="0,10,0,0"/>
            <TextBox x:Name="textBoxUsername" BorderBrush="LightGray" FontSize="16" />
            <TextBlock Foreground="Black" Text="Password" FontSize="16" Margin="0,10,0,0"/>
            <PasswordBox x:Name="textBoxPassword" BorderBrush="LightGray" FontSize="16"/>
            <Button IsDefault="True" Content="Login" Name="Login" Click="Login_Click" Margin="50,20,50,0" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>
